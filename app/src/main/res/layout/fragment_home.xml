<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#DDF7F7"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="269dp"
        android:layout_height="293dp"
        android:layout_marginTop="-34dp"
        android:src="@drawable/newcircle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/text_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Hello, "
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Ali"
        android:textColor="#157177"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/text_hello"
        app:layout_constraintStart_toEndOf="@id/text_hello"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_ready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Ready for mentorship? Let's begin the journey!"
        android:textColor="#157177"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/text_hello"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="@drawable/square_rounded"
        android:backgroundTint="#157177"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/text_ready"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/text_education"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Education"
        android:textColor="#157177"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="@drawable/square_rounded"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/text_ready"
        app:layout_constraintStart_toEndOf="@id/text_all"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/text_entrepreneurship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrepreneurship"
        android:textColor="#157177"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="@drawable/square_rounded"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/text_ready"
        app:layout_constraintStart_toEndOf="@id/text_education"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:id="@+id/text_personal_growth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Growth"
        android:textColor="#157177"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="@drawable/square_rounded"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/text_ready"
        app:layout_constraintStart_toEndOf="@id/text_entrepreneurship"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:id="@+id/top_picks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Mentors for you"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintTop_toBottomOf="@id/text_all"
        app:layout_constraintStart_toStartOf="@id/text_all"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:textColor="#157177"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All"
        android:textColor="#157177"
        app:layout_constraintBaseline_toBaselineOf="@id/top_picks"
        app:layout_constraintTop_toBottomOf="@id/text_all"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="5dp"/>

    <ImageView
        android:id="@+id/card1"
        android:layout_width="200dp"
        android:layout_height="207dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/card"
        app:layout_constraintLeft_toLeftOf="@id/top_picks"
        app:layout_constraintTop_toBottomOf="@id/top_picks" />

    <TextView
        android:id="@+id/john"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/square_rounded"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif-condensed"
        android:paddingStart="5dp"
        android:paddingTop="3dp"
        android:paddingRight="30dp"
        android:text="John Cooper      "
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/card1"
        app:layout_constraintLeft_toLeftOf="@id/card1"
        app:layout_constraintRight_toRightOf="@id/card1"
        app:layout_constraintStart_toStartOf="@id/card1" />

    <TextView
        android:id="@+id/john_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:text="UX Designer @ Google"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/john"
        app:layout_constraintLeft_toLeftOf="@id/john" />

    <TextView
        android:layout_width="159dp"
        android:layout_height="21dp"
        android:text="â¦¿ Available"
        android:textColor="#3EAC00"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/john_desc"
        app:layout_constraintTop_toBottomOf="@id/john_desc"/>




</androidx.constraintlayout.widget.ConstraintLayout>