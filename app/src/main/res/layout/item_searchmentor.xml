<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="340dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#50C1C8"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/filter">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_mentor"
                android:layout_width="141dp"
                android:layout_height="match_parent"
                android:background="#DCF6F6"
                android:padding="3dp"
                android:src="@drawable/card" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Title, secondary and supporting text -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Cooper"
                        android:textAppearance="?attr/textAppearanceTitleMedium"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$1500/Session"
                        android:layout_marginLeft="8dp"
                        android:textColor="#FFC107"
                        android:textSize="8sp"
                        android:layout_gravity="center|right"
                        android:gravity="center|right"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="UX Designer @ Google"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="@color/black" />

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="â¦¿ Available"
                        android:textAppearance="?attr/textAppearanceBodyMedium"
                        android:textColor="#3EAC00"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/image_favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/baseline_favorite_24"
                        android:layout_gravity="bottom|end"
                        android:layout_alignParentEnd="true"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
</com.google.android.material.card.MaterialCardView>
